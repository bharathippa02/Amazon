<%- include('partials/header') %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Amazon</a>
   

        
      <form class="form-inline my-2 my-lg-0 ml-auto" action="/home" method="post">
        <input name="productSearch" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      </form>
      <a href="/cart">
        <i class="fa" style="font-size:24px">&#xf07a;</i>
        <span class='badge badge-warning' id='lblCartCount'><%= count %></span>
      </a>
  </nav>
  
    

<% info.forEach(p => {%>
    <div class="firstdiv">

    <form action="/product" method="post">
        <img src=" https://<%= p.imageUrl  %>" alt="image">
        <div class="productinfo">
            <p><%= p.id %></p>
            <p><%= (p.name).substring(0,20)+"..." %></p> 
             <p>price : <%= p.price.current.value*70 %></p>
             <p><%= p.colour %></p>

             <button class="details btn btn-light" type="submit"  name="productName" value="<%= p.id %>">Details</button>
             </div>
  </form>
             <form action="/cart" method="post">
              <button class=" cart btn btn-dark" type="submit"  name="productName" value="<%= p.id %>">Add to Cart</button>
             </form>
             
       
        
       
    

</div> 
<% }); %>

<div class="container">
<div class="forms row">
  <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3">
    <form action="/prev" method="post">
      <button name="prev" class="btn btn-dark"  <%= disabl %> type="submit"> <i><<</i> prev</button>
    </form>
  </div>
  <div class=" col-lg-3 col-sm-3 col-md-3 col-xs-3"></div>
  <div class=" col-lg-3 col-sm-3 col-md-3 col-xs-3"></div>
  <div class=" col-lg-3 col-sm-3 col-md-3 col-xs-3">
    <form action="/next" method="post">
      <button name="next" class="btn btn-dark"  <%= disable %> type="submit">next>></button>
    </form>
  </div>
</div>
</div>

  


